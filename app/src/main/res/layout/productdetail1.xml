<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.ProductDetail">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/product_detail"
                            android:text="제품 상세 정보"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            android:paddingTop="50px"
                            android:paddingLeft="70px" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="105dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/preview_button"
                                    android:text="미리보기"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                   />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/basket_add_button"
                                    android:text="장바구니 추가"
                                    app:layout_constraintLeft_toRightOf="@id/preview_button"
                                    android:layout_marginLeft="15dp"/>

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2.3dp"
                            android:layout_marginLeft="70px"
                            android:layout_marginRight="70px"
                            android:layout_marginTop="15px"

                            android:id="@+id/product_detail_line1"
                            app:layout_constraintTop_toBottomOf="@id/product_detail"
                            android:background="@color/black"

                                />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_detail_text1"
                            app:layout_constraintTop_toBottomOf="@id/product_detail"
                            android:paddingTop = "5dp"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:gravity="center"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_detail_text2"
                            app:layout_constraintTop_toBottomOf="@id/product_detail"
                            android:paddingTop = "5dp"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:gravity="center"

                            />
                        <View
                            android:id="@+id/product_detail_line2"
                            android:layout_width="match_parent"
                            android:layout_height="2.3dp"
                            android:background="@color/black"
                            android:layout_marginTop="30px"
                            android:layout_marginLeft="70px"
                            android:layout_marginRight="70px"
                            app:layout_constraintTop_toBottomOf="@+id/product_detail1"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_detail_image1"
                            android:src="@drawable/ic_launcher_background"
                            android:layout_marginTop="30px"
                            app:layout_constraintTop_toBottomOf="@id/item_detail_text1"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2.3dp"
                            android:layout_marginTop="30px"
                            android:layout_marginLeft="70px"
                            android:layout_marginRight="70px"
                            android:id="@+id/product_detail_line3"

                            android:background="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/item_detail_image1"
                            />
                        <TextView
                            android:id="@+id/item_detail_text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/product_detail_line3"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:textSize="30dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="30px"
                            android:layout_marginLeft="30px"

                                />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/item_detail_text3"
                            android:id="@+id/item_detail_text4"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="30px"
                            android:textSize="20dp"
                            android:layout_gravity="left"
                                />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2.3dp"
                            android:id="@+id/product_detail_line4"
                            app:layout_constraintTop_toBottomOf="@id/item_detail_text4"
                            android:layout_marginTop="30px"
                            android:layout_marginLeft="70px"
                            android:layout_marginRight="70px"
                                android:background="@color/black"
                                />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_detail_image2"
                            android:layout_marginTop="30px"
                            android:src="@drawable/ic_launcher_background"
                            app:layout_constraintTop_toBottomOf="@id/product_detail_line4"
                                />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2.3dp"
                            android:id="@+id/product_detail_line5"
                            app:layout_constraintTop_toBottomOf="@id/item_detail_image2"
                            android:layout_marginTop="30px"
                            android:layout_marginLeft="70px"
                            android:layout_marginRight="70px"
                            android:background="@color/black"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/item_detail_image3"
                            android:src="@drawable/ic_launcher_background"
                            android:layout_marginTop="30px"
                            app:layout_constraintTop_toBottomOf="@id/product_detail_line5"
                            />








                </LinearLayout>


        </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>